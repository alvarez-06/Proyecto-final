<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('partials/head', { title: 'Crear Nuevo Proyecto' }) %>
</head>
<body>
    <%- include('partials/navbar') %>
    <h1>Crear Nuevo Proyecto</h1>

    <% if (errors && errors.length > 0) { %>
        <div style="color: red;">
            <ul>
                <% errors.forEach(function(error) { %>
                    <li><%= error.msg %></li>
                <% }); %>
            </ul>
        </div>
    <% } %>

    <form action="/proyectos/crear" method="POST" class="create-proyect">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

        <label for="nombreProyecto" class="label-create">Nombre del Proyecto:</label>
        <input type="text" id="nombreProyecto" name="nombreProyecto" value="<%= oldInput.nombreProyecto || '' %>" required>

        <label for="descripcionProyecto" class="label-create">Descripci√≥n:</label>
        <textarea id="descripcionProyecto" name="descripcionProyecto" required><%= oldInput.descripcionProyecto || '' %></textarea>

        <label for="fechaEntrega" class="label-create">Fecha de Entrega:</label>
        <input type="date" id="fechaEntrega" name="fechaEntrega" value="<%= oldInput.fechaEntrega ? new Date(oldInput.fechaEntrega).toISOString().split('T')[0] : '' %>" required>

        <button type="submit" class="button-crearProyecto">Crear Proyecto</button>
    </form>

    <p><a href="/proyectos">Volver a mis proyectos</a></p>
    <%- include('partials/footer') %>
</body>
</html>