<!DOCTYPE html>
<head>
    <%- include('partials/head', { title: 'Recuperar Contraseña' }) %>
</head>
<body>
    <div class="card">
        <h2>Recuperar Contraseña</h2>
        <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
            <p>Por favor, corrige los siguientes errores:</p>
            <ul>
                <% errors.forEach(function(error) { %>
                    <li><%= error.msg %></li>
                <% }); %>
            </ul>
        <% } %>

        <% if (typeof mensaje !== 'undefined' && mensaje) { %>
            <p><%= mensaje %></p>
        <% } %>
        <form action="/enviar-recuperacion" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <label>Correo:</label>
            <input type="email" name="correo" required style="margin-bottom: 10px;">
            <button type="submit">Enviar enlace</button>
        </form>
    </div>
    <p style="text-align: center; margin-top: 20px;"><a href="/">Volver al inicio de sesión</a></p>
    <%- include('partials/footer') %>
</body>
</html>